<?xml version="1.0" encoding="UTF-8"?>
<screen name="상세 화면">
    <description>아이템의 상세 정보를 표시하는 화면 템플릿</description>
    
    <layout type="coordinator">
        <!-- 상단 이미지 영역 (Collapsing) -->
        <app_bar_layout
            height="256dp"
            background_color="#PRIMARY_COLOR">
            
            <collapsing_toolbar>
                <!-- 배경 이미지 -->
                <image
                    id="header_image"
                    width="match_parent"
                    height="match_parent"
                    scale_type="center_crop"
                    background_color="#E0E0E0"
                    parallax_multiplier="0.7"/>
                
                <!-- 그라디언트 오버레이 -->
                <gradient_overlay
                    width="match_parent"
                    height="match_parent"
                    start_color="#00000000"
                    end_color="#66000000"
                    angle="270"/>
                
                <!-- 툴바 -->
                <toolbar
                    height="56dp"
                    pin_mode="pin">
                    
                    <icon_button
                        id="back_button"
                        icon="@drawable/ic_arrow_back"
                        width="48dp"
                        height="48dp"
                        tint="#FFFFFF"/>
                    
                    <text
                        id="toolbar_title"
                        text=""
                        text_size="20sp"
                        text_color="#FFFFFF"
                        text_style="bold"
                        layout_gravity="center"
                        show_on_collapse="true"/>
                    
                    <container
                        layout_gravity="end"
                        orientation="horizontal">
                        
                        <icon_button
                            id="share_button"
                            icon="@drawable/ic_share"
                            width="48dp"
                            height="48dp"
                            tint="#FFFFFF"/>
                        
                        <icon_button
                            id="more_button"
                            icon="@drawable/ic_more_vert"
                            width="48dp"
                            height="48dp"
                            tint="#FFFFFF"/>
                            
                    </container>
                </toolbar>
                
                <!-- 하단 제목 영역 -->
                <container
                    width="match_parent"
                    height="wrap_content"
                    layout_gravity="bottom"
                    padding="16dp"
                    collapse_mode="parallax">
                    
                    <text
                        id="header_title"
                        text="[제목]"
                        text_size="28sp"
                        text_style="bold"
                        text_color="#FFFFFF"
                        max_lines="2"
                        ellipsize="end"/>
                        
                </container>
                
            </collapsing_toolbar>
        </app_bar_layout>
        
        <!-- 메인 콘텐츠 -->
        <nested_scroll_view
            width="match_parent"
            height="match_parent">
            
            <container
                width="match_parent"
                height="wrap_content"
                orientation="vertical">
                
                <!-- 기본 정보 섹션 -->
                <card
                    width="match_parent"
                    height="wrap_content"
                    margin="16dp"
                    corner_radius="12dp"
                    elevation="2dp">
                    
                    <container
                        width="match_parent"
                        height="wrap_content"
                        orientation="vertical"
                        padding="16dp">
                        
                        <!-- 메타 정보 -->
                        <container
                            width="match_parent"
                            height="wrap_content"
                            orientation="horizontal"
                            margin_bottom="12dp">
                            
                            <chip
                                id="category_chip"
                                text="[카테고리]"
                                background_color="#PRIMARY_COLOR_LIGHT"
                                text_color="#PRIMARY_COLOR"
                                margin_end="8dp"/>
                            
                            <text
                                id="date_text"
                                text="[날짜]"
                                text_size="14sp"
                                text_color="#999999"
                                layout_gravity="center_vertical"/>
                                
                        </container>
                        
                        <!-- 설명 -->
                        <text
                            id="description_text"
                            text="[상세 설명 텍스트가 여기에 표시됩니다. 여러 줄로 표시될 수 있으며, 필요에 따라 확장/축소 기능을 추가할 수 있습니다.]"
                            text_size="16sp"
                            text_color="#333333"
                            line_height="24sp"/>
                        
                        <!-- 더보기 버튼 (긴 텍스트용) -->
                        <text
                            id="read_more"
                            text="더보기"
                            text_size="14sp"
                            text_color="#PRIMARY_COLOR"
                            margin_top="8dp"
                            visibility="gone"/>
                            
                    </container>
                </card>
                
                <!-- 상세 정보 섹션 -->
                <card
                    width="match_parent"
                    height="wrap_content"
                    margin_horizontal="16dp"
                    margin_bottom="16dp"
                    corner_radius="12dp"
                    elevation="2dp">
                    
                    <container
                        width="match_parent"
                        height="wrap_content"
                        orientation="vertical"
                        padding="16dp">
                        
                        <text
                            text="상세 정보"
                            text_size="18sp"
                            text_style="bold"
                            text_color="#333333"
                            margin_bottom="16dp"/>
                        
                        <!-- 정보 아이템 1 -->
                        <container
                            width="match_parent"
                            height="wrap_content"
                            orientation="horizontal"
                            margin_bottom="12dp">
                            
                            <text
                                text="항목 1"
                                text_size="14sp"
                                text_color="#666666"
                                width="100dp"/>
                            
                            <text
                                id="info_item1"
                                text="[값]"
                                text_size="14sp"
                                text_color="#333333"
                                text_style="bold"/>
                                
                        </container>
                        
                        <!-- 정보 아이템 2 -->
                        <container
                            width="match_parent"
                            height="wrap_content"
                            orientation="horizontal"
                            margin_bottom="12dp">
                            
                            <text
                                text="항목 2"
                                text_size="14sp"
                                text_color="#666666"
                                width="100dp"/>
                            
                            <text
                                id="info_item2"
                                text="[값]"
                                text_size="14sp"
                                text_color="#333333"
                                text_style="bold"/>
                                
                        </container>
                        
                        <!-- 정보 아이템 3 -->
                        <container
                            width="match_parent"
                            height="wrap_content"
                            orientation="horizontal">
                            
                            <text
                                text="항목 3"
                                text_size="14sp"
                                text_color="#666666"
                                width="100dp"/>
                            
                            <text
                                id="info_item3"
                                text="[값]"
                                text_size="14sp"
                                text_color="#333333"
                                text_style="bold"/>
                                
                        </container>
                        
                    </container>
                </card>
                
                <!-- 관련 항목 섹션 (선택사항) -->
                <container
                    width="match_parent"
                    height="wrap_content"
                    orientation="vertical"
                    padding="16dp">
                    
                    <text
                        text="관련 항목"
                        text_size="18sp"
                        text_style="bold"
                        text_color="#333333"
                        margin_bottom="16dp"/>
                    
                    <!-- 가로 스크롤 리스트 -->
                    <horizontal_scroll_view
                        width="match_parent"
                        height="wrap_content">
                        
                        <container
                            width="wrap_content"
                            height="wrap_content"
                            orientation="horizontal">
                            
                            <!-- 관련 아이템 카드 -->
                            <card
                                width="150dp"
                                height="180dp"
                                margin_end="12dp"
                                corner_radius="8dp"
                                elevation="2dp">
                                
                                <container
                                    width="match_parent"
                                    height="match_parent"
                                    orientation="vertical">
                                    
                                    <image
                                        width="match_parent"
                                        height="100dp"
                                        scale_type="center_crop"
                                        background_color="#E0E0E0"/>
                                    
                                    <container
                                        width="match_parent"
                                        height="match_parent"
                                        padding="12dp">
                                        
                                        <text
                                            text="[관련 항목]"
                                            text_size="14sp"
                                            text_style="bold"
                                            text_color="#333333"
                                            max_lines="2"
                                            ellipsize="end"/>
                                            
                                    </container>
                                </container>
                            </card>
                            
                            <!-- 추가 카드들... -->
                            
                        </container>
                    </horizontal_scroll_view>
                    
                </container>
                
                <!-- 하단 여백 -->
                <space
                    width="match_parent"
                    height="80dp"/>
                    
            </container>
        </nested_scroll_view>
        
        <!-- 하단 고정 버튼 -->
        <container
            width="match_parent"
            height="wrap_content"
            layout_gravity="bottom"
            background_color="#FFFFFF"
            elevation="8dp"
            padding="16dp">
            
            <button
                id="primary_action"
                width="match_parent"
                height="48dp"
                text="[주요 액션]"
                style="filled"
                background_color="#PRIMARY_COLOR"
                text_color="#FFFFFF"
                corner_radius="8dp"/>
                
        </container>
        
    </layout>
    
    <actions>
        <!-- 뒤로가기 -->
        <click_action
            target="back_button"
            action="navigate_back"/>
        
        <!-- 공유 -->
        <click_action
            target="share_button"
            action="share_content"/>
        
        <!-- 더보기 메뉴 -->
        <click_action
            target="more_button"
            show_menu="detail_options_menu"/>
        
        <!-- 텍스트 확장/축소 -->
        <click_action
            target="read_more"
            action="toggle_text_expansion"/>
        
        <!-- 주요 액션 -->
        <click_action
            target="primary_action"
            action="perform_primary_action"/>
    </actions>
    
    <!-- 옵션 메뉴 -->
    <options_menu id="detail_options_menu">
        <menu_item
            id="edit"
            text="수정"
            icon="@drawable/ic_edit"/>
        
        <menu_item
            id="delete"
            text="삭제"
            icon="@drawable/ic_delete"
            text_color="#ERROR_COLOR"/>
        
        <menu_item
            id="report"
            text="신고"
            icon="@drawable/ic_report"/>
    </options_menu>
</screen>