<?xml version="1.0" encoding="UTF-8"?>
<screen name="Recipesoup 스플래시 화면">
    <description>빈티지 아이보리 톤의 감정 기반 레시피 아카이빙 앱 스플래시</description>
    
    <layout type="stack">
        <!-- 배경 -->
        <container 
            width="match_parent" 
            height="match_parent"
            background_color="#FAF8F3">  <!-- 아이보리 백그라운드 -->
            
            <!-- 중앙 콘텐츠 -->
            <container
                width="match_parent"
                height="match_parent"
                gravity="center">
                
                <!-- 빈티지 일러스트 로고 -->
                <image
                    id="vintage_logo"
                    width="120dp"
                    height="120dp"
                    src="@drawable/vintage_cooking_logo"
                    tint="#8B9A6B"
                    content_description="빈티지 요리 도구 일러스트 로고"/>
                
                <!-- 앱 이름: Recipesoup -->
                <text
                    id="app_name"
                    width="wrap_content"
                    height="wrap_content"
                    text="Recipesoup"
                    text_size="32sp"
                    text_style="bold"
                    font_family="serif"
                    text_color="#2E3D1F"
                    letter_spacing="-0.5sp"
                    margin_top="24dp"/>
                
                <!-- 감정 기반 설명 -->
                <text
                    id="tagline"
                    width="wrap_content"
                    height="wrap_content"
                    text="감정 기반 레시피 아카이빙"
                    text_size="16sp"
                    font_family="serif"
                    text_color="#5A6B49"
                    margin_top="8dp"/>
                
            </container>
            
            <!-- 하단 로딩 인디케이터 -->
            <container
                width="match_parent"
                height="wrap_content"
                gravity="center_horizontal"
                layout_gravity="bottom"
                margin_bottom="48dp">
                
                <!-- 빈티지 스타일 로딩 -->
                <progress_indicator
                    id="loading_indicator"
                    width="24dp"
                    height="24dp"
                    style="dots"
                    color="#8B9A6B"/>
                
                <!-- 로딩 메시지 -->
                <text
                    id="loading_message"
                    width="wrap_content"
                    height="wrap_content"
                    text="마음을 담은 레시피를 준비하는 중..."
                    text_size="14sp"
                    font_family="serif"
                    text_color="#8B9A6B"
                    margin_top="16dp"/>
                
            </container>
            
        </container>
    </layout>
    
    <animations>
        <!-- 빈티지 로고 부드러운 페이드인 -->
        <fade_in
            target="vintage_logo"
            duration="800ms"
            start_delay="200ms"
            easing="ease_out"/>
        
        <!-- 앱명 우아한 등장 -->
        <fade_in
            target="app_name"
            duration="600ms"
            start_delay="700ms"
            easing="ease_out"/>
        
        <!-- 태그라인 자연스러운 페이드인 -->
        <fade_in
            target="tagline"
            duration="500ms"
            start_delay="1000ms"/>
        
        <!-- 로딩 인디케이터 애니메이션 -->
        <fade_in
            target="loading_indicator"
            duration="300ms"
            start_delay="1300ms"/>
            
        <fade_in
            target="loading_message"
            duration="300ms"
            start_delay="1500ms"/>
    </animations>
    
    <!-- 빈티지 장식 요소 -->
    <background_decorations>
        <decoration
            type="vine_corner"
            position="top_left"
            size="60dp"
            color="#D2A45B"
            opacity="0.15"/>
        <decoration
            type="vine_corner"
            position="top_right"
            size="60dp"
            color="#D2A45B"
            opacity="0.15"/>
        <decoration
            type="vine_corner"
            position="bottom_left"
            size="60dp"
            color="#D2A45B"
            opacity="0.15"/>
        <decoration
            type="vine_corner"
            position="bottom_right"
            size="60dp"
            color="#D2A45B"
            opacity="0.15"/>
    </background_decorations>
    
    <actions>
        <!-- 바로 작성 유도를 위한 더 빠른 전환 -->
        <auto_navigate
            to="main_screen"
            delay="2500ms"
            transition="fade_out"
            condition="initialization_complete"/>
    </actions>
    
    <!-- 빈티지 아이보리 색상 정의 -->
    <colors>
        <color name="background_ivory" value="#FAF8F3"/>
        <color name="primary_olive" value="#8B9A6B"/>
        <color name="text_dark_olive" value="#2E3D1F"/>
        <color name="text_mid_olive" value="#5A6B49"/>
        <color name="accent_vintage_orange" value="#D2A45B"/>
        <color name="surface_ivory" value="#FFFEFB"/>
    </colors>
    
    <!-- 빈티지 일러스트 요소 정의 -->
    <vintage_elements>
        <element type="cooking_utensils" style="line_art"/>
        <element type="herb_leaves" style="watercolor"/>
        <element type="decorative_borders" style="hand_drawn"/>
    </vintage_elements>
    
</screen>